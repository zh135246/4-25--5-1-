package 第三周代码;

public class 代码03手机类定义与使用 {
class Phone{
	String brand;
	int price;
	String color;
	void call(String name) {
		cout<<"给"+name+"打电话"<<endl;
	}
	void send(String name) {
		cout<<"给"+name+"发短信"<<endl;
	}
	void play() {
		cout<<name+"玩游戏"<<endl;
	}
}
public static void main(String[] args) {
	String brand="华为";
	String color="黑色";
	int price=4500;
	System.out.println(brand);
	System.out.println(color);
	System.out.println(price);
	call("成龙");
	send("黄晓明");
	play("二手玫瑰");
	
			
			
}
}
